general {
    hide_cursor = true
    grace = 0
}

background {
    monitor =
    path = /home/kaspernyhus/.config/hypr/wallpaper/1920x1080-dark-linux.png
    color = rgba(25, 20, 20, 1.0)

    blur_passes = 2
    blur_size = 2
    noise = 0.01
    contrast = 0.5
    brightness = 0.3
    vibrancy = 0.1
    vibrancy_darkness = 0.0
}

input-field {
    monitor =
    size = 200, 50
    outline_thickness = 2
    dots_size = 0.25 # Scale of input-field height, 0.2 - 0.8
    dots_spacing = 0.15 # Scale of dots' absolute size, 0.0 - 1.0
    dots_center = true
    outer_color = rgb(28, 28, 28)
    inner_color = rgb(92, 83, 74)
    font_color = rgb(28, 28, 28)
    fade_on_empty = true
    placeholder_text = <i>Input Password...</i> # Text rendered in the input box when it's empty.
    hide_input = false
    position = 0, -280
    halign = center
    valign = center
}

label {
    monitor =
    text = $TIME
    color = rgba(92, 83, 74, 1.0)
    font_size = 100
    font_family = Fira Sans Bold
    position = 0, -120
    halign = center
    valign = top
}
