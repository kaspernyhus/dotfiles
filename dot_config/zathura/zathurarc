# Zathura configuration file

#stop at page boundries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 100

set statusbar-fg "#928374"
set statusbar-bg "#202020"

set inputbar-bg "#151515" #00 currently not used
set inputbar-fg "#FFFFFF"

set selection-clipboard clipboard

map j feedkeys "<C-Down>"
map k feedkeys "<C-Up>"
map <Down> feedkeys "<C-Down>"
map <Up> feedkeys "<C-Up>"

set default-bg rgba(0,0,0,0.7)


map <C-i> recolor
set recolor "true"
set recolor-lightcolor "#282828"
set recolor-darkcolor "#fcf0d2"
set recolor-reverse-video "true"
set recolor-keephue "true"

