// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  // AI stuff
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "show_edit_predictions": false,

  // Looks
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "selections_menu": false
  },
  "file_finder": {
    "modal_max_width": "medium",
    "file_icons": false
  },

  // Fonts
  "ui_font_family": "FiraCode Nerd Font",
  "buffer_font_family": "FiraCode Nerd Font",
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "buffer_line_height": "standard",

  // Editor
  "vim_mode": true,
  "hide_mouse": "on_typing_and_movement",
  "inlay_hints": {
    "enabled": true,
    "show_parameter_hints": true,
    "show_type_hints": true,
    "show_variable_hints": true
  },
  "cursor_blink": false,
  "relative_line_numbers": true,
  "tab_bar": {
    "show": true
  },
  "scrollbar": {
    "show": "auto"
  },
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 2,
    "coloring": "fixed",
    "background_coloring": "disabled"
  },
  "preview_tabs": {
    "enabled": false
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "wrap_guides": [120],
  "show_wrap_guides": true,
  "tab_size": 4,
  "format_on_save": "off",

  // Theme
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Gruvbox Material"
  },
  "experimental.theme_overrides": {
    "background": "#222424",
    "editor.background": "#222424",
    "editor.gutter.background": "#222424",
    "panel.background": "#222424",
    "status_bar.background": "#222424",
    "tab_bar.background": "#222424",
    "toolbar.background": "#222424",
    // Terminal
    "terminal.background": "#222424",
    "terminal.foreground": "#ebdbb2",
    "terminal.ansi.red": "#cc241d",
    "terminal.ansi.green": "#98971a",
    "terminal.ansi.yellow": "#d79921",
    "terminal.ansi.blue": "#458588"
  },
  "centered_layout": {
    "left_padding": 0.17,
    "right_padding": 0.17
  },
  "terminal": {
    "font_family": "FiraCode Nerd Font"
  },

  // Languages
  "languages": {
    "JSONC": {
      "tab_size": 2
    },
    "HTML": {
      "tab_size": 2,
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "djlint",
          "arguments": [
            "-",
            "--reformat",
            "--format-css",
            "--format-js",
            "--indent",
            "2",
            "--max-blank-lines",
            "2",
            "--profile",
            "django",
            "--quiet"
          ]
        }
      }
    },
    "Python": {
      "tab_size": 4,
      "format_on_save": "on",
      // "language_servers": ["ruff"],
      "formatter": [
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 120
        }
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "inlayHints": {
          "maxLength": 25,
          "closingBraceHints": {
            "enable": false
          },
          "lifetimeElisionHints": {
            "enable": "skip_trivial",
            "useParameterNames": true
          },
          "closureReturnTypeHints": {
            "enable": "always"
          }
        }
      }
    }
  }
}
